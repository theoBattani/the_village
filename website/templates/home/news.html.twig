{% extends 'base.html.twig' %}

{% block style %}
{% endblock %}

{% block javascript %}
{% endblock %}

{% block body %}

<section id="news">
  <ul class="d-flex flex-column justify-content-md-center">
    {% for article in articles %}
      <li>
        <div class="card m-4" style="width: 23rem; height: 37rem;">
          <img class="card-img-top" src="{{ article.imageurl }}" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <p class="card-text">{{ article.content }}</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
</section>

{% endblock %}